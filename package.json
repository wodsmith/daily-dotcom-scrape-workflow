{
	"name": "workflows-starter",
	"version": "0.0.1",
	"scripts": {
		"deploy:prod": "wrangler deploy",
		"start": "wrangler dev",
		"trigger:workflow": "./scripts/trigger-workflow.ts",
		"build": "npx tsc --noEmit",
		"test": "echo 'No test framework configured - using TypeScript compilation for validation'",
		"test:config": "npx tsc --noEmit && echo 'Configuration validation passed'",
		"db:local": "wrangler d1 execute wodsmith-db --local",
		"db:remote": "wrangler d1 execute wodsmith-db --remote",
		"db:setup": "wrangler d1 execute wodsmith-db --local --file ./migrations/0001_initial_schema.sql && wrangler d1 execute wodsmith-db --local --file ./migrations/0002_test_data.sql",
		"db:reset": "rm -rf .wrangler/state/v3/d1 && pnpm run db:setup",
		"db:shell": "wrangler d1 execute wodsmith-db --local --command"
	},
	"devDependencies": {
		"@types/bun": "latest",
		"@types/node": "^22.15.28",
		"bun": "^1.2.15",
		"typescript": "^5.0.4",
		"wrangler": "^4.20.4"
	},
	"packageManager": "pnpm@9.1.4",
	"engines": {
		"pnpm": "^9.1.4"
	},
	"pnpm": {
		"overrides": {
			"esbuild": "0.24.0"
		}
	},
	"dependencies": {
		"ai": "^4.3.16",
		"cheerio": "^1.0.0",
		"pino": "^9.7.0",
		"zod": "^3.25.67"
	}
}